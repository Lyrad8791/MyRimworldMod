<?xml version="1.0" encoding="utf-8" ?>
<Defs>




  <ThingDef ParentName="VG_PlantDef">
    <defName>PlantHealroot</defName>
    <label>healroot</label>
    <description>A slow-growing plant which yields herbal medicine when harvested.\n\nHealroot was selectively bred for centuries by settlers. It is sometimes also called &quot;healer's hand&quot; by tribespeople - a nickname it owes to its five major medicinal virtues.</description>
    <graphicData>
      <texPath>Things/Plants/Healroot</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <plant>
      <harvestedThingDef>HerbalMedicine</harvestedThingDef>
      <harvestYield>1</harvestYield>
      <sowMinSkill>8</sowMinSkill>
      <growDays>6.5</growDays>
      <fertilitySensitivity>1.0</fertilitySensitivity>
    </plant>
  </ThingDef>





  <ThingDef ParentName="VG_PlantDef">
    <defName>PlantNeutroFlower</defName>
    <label>Neutro Flower</label>
    <description>A beautiful Yellow-Orange Flower. Used to make Neutroamine, a medicine base. </description>
    <graphicData>
      <texPath>Things/Plants/NeutroFlower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>30</Beauty>
    </statBases>
    <plant>
      <harvestedThingDef>NeutroPetals</harvestedThingDef>
      <harvestYield>5</harvestYield>
      <sowMinSkill>7</sowMinSkill>
      <growDays>10</growDays>
      <fertilitySensitivity>1</fertilitySensitivity>
       <sowResearchPrerequisites>
        <li>DrugProduction</li>
      </sowResearchPrerequisites>
   </plant>
  </ThingDef>


  <ThingDef ParentName="VG_PlantBase">
    <defName>PlantTobacco</defName>
    <label>tobacco plant</label>
    <description>A green, leafy plant. Use in making cigarillos.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
    <texPath>Things/Plants/TobaccoPlant</texPath><graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>NeverForNutrition</preferability>
      <nutrition>0.05</nutrition>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawTobacco</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.15</topWindExposure>
      <growDays>10</growDays>
      <fertilitySensitivity>1</fertilitySensitivity>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>



</Defs>